{
    "name": "Jupyter with Dev Container Compatibility",
    "image": "jupyter/scipy-notebook:latest",
    "features": {
        "../src/jupyter-compat": {
            "jupyterUser": "jovyan",
            "jupyterWorkspace": "/home/jovyan/work"
        }
    },
    "remoteUser": "jovyan",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "forwardPorts": [8888],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    }
}